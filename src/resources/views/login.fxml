<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="10" fx:id="root" alignment="CENTER" prefHeight="310.0" prefWidth="453.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="md.klass.application.controllers.LoginController">
    <Label fx:id="errorMessage"/>


    <HBox alignment="TOP_CENTER">
        <Label alignment="TOP_CENTER" text="Username: "/>
        <TextField fx:id="username" alignment="TOP_CENTER"/>
    </HBox>
    <HBox alignment="CENTER">
        <Label text="Password: "/>
        <TextField fx:id="password" alignment="TOP_CENTER"/>
    </HBox>
    <Button fx:id="button" alignment="CENTER" contentDisplay="CENTER" onAction="#login" text="Login"/>
    <Label text="Dont have any account? "/>
    <Button fx:id="signup" text="Sign-up" onMouseClicked="#signup"/>
</VBox>
